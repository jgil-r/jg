---
import ExternalLink from './ExternalLink.astro';
---

<header>
  <ul>
    <li>
      <ExternalLink href="https://github.com/jgil-r" type="secondary">Github</ExternalLink>
    </li>
    <li>
      <ExternalLink href="https://twitter.com/jgil_r" type="secondary">Twitter</ExternalLink>
    </li>
    <li>
      <ExternalLink href="https://www.polywork.com/jesusgil" type="secondary">Polywork</ExternalLink>
    </li>
  </ul>
</header>

<style>
  header {
    height: 64px;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin: 3rem 0 5rem;
    position: sticky;
    top: 0;
    background-color: var(--color-secondary);
  }

  ul {
    padding-left: 0;
    list-style: none;
    display: flex;
  }

  ul > li {
    margin-left: 1rem;
  }

  @media (max-width: 640px) {
    header {
      margin-top: var(--space-md);
    }
  }

  @media (prefers-color-scheme: dark) {
    header {
      background-color: var(--color-primary);
    }
  }
</style>
